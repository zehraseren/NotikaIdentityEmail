@using NotikaIdentityEmail.Models.IdentityModels
@model RegisterUserViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Identity Kayıt Formu</title>
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Font-->
    <link rel="stylesheet" type="text/css" href="~/colorlib-regform-35/css/nunito-font.css">
    <!-- Main Style Css -->
    <link rel="stylesheet" href="~/colorlib-regform-35/css/style.css" />
</head>
<body class="form-v9">
    <div class="page-content">
        <div class="form-v9-content" style="background-image: url('/colorlib-regform-35/images/form-v9.jpg')">
            <form class="form-detail" method="post">
                <h2>Yeni Kullanıcı Kaydı</h2>
                <div class="form-row-total">
                    <div class="form-row">
                        <input type="text" asp-for="Name" class="input-text" placeholder="Ad">
                    </div>
                    <div class="form-row">
                        <input type="text" asp-for="Surname" class="input-text" placeholder="Soyad">
                    </div>
                </div>
                <div class="form-row-total">
                    <div class="form-row">
                        <input type="email" asp-for="Email" class="input-text" placeholder="Email Adresi">
                    </div>
                    <div class="form-row">
                        <input type="text" asp-for="Username" class="input-text" placeholder="Kullanıcı Adı">
                    </div>
                </div>
                <div class="form-row-total">
                    <div class="form-row">
                        <input type="password" asp-for="Password" class="input-text" placeholder="Şifre">
                    </div>
                    <div class="form-row">
                        <input type="password" asp-for="ConfirmPassword" class="input-text" placeholder="Şifre Tekrar">
                    </div>
                </div>
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-row-last">
                    <input type="submit" class="register" value="Kayıt Ol">
                </div>
            </form>
        </div>
    </div>
</body>
</html>